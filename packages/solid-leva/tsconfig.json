{
  "extends": "@vinxi/tsconfig/solid-library.json",
  "include": ["./src"],
  "compilerOptions": {
    "outDir": "./types",
    "rootDir": "./src",
    "jsxImportSource": "solid-js",
    "noImplicitAny": false,
    "emitDeclarationOnly": true,
    "baseUrl": "./src",
    "paths": {
      "src/*": ["./*"]
    }
  },
  "exclude": [
    "dist",
    "build",
    "node_modules",
    "src/components/Vector",
    "src/components/Vector2d",
    "src/components/Vector3d",
    "src/components/Image",
    "src/components/Monitor"
  ]
}
